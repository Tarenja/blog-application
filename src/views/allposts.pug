doctype html
html
	head
		link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
		link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.1/css/materialize.min.css")
		script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')
	body
		nav
			ul#nav-mobile.right.hide-on-med-and-down
				li: a(href='/') Home
				li: a(href='/users/' + user.username) Profile
				li: a(href='/posts/user') My Posts
				li.active: a(href='#') All Posts
				li: a(href='/logout') Logout

		div.container
			a(href='/posts/new') Create New Post
				if postList.length != 0
					each post in postList
						each postUser in users
							if postUser.id === post.userId
								ul
									a(href='/posts/' + post.id): li #{post.title}
									li= post.body
									li.chip Posted by: #{postUser.username}
									br
				else
					h1 No posts yet!
					br
				script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.1/js/materialize.min.js")
