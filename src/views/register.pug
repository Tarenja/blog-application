doctype html
html
	head
		script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')
		link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
		link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.1/css/materialize.min.css")
	body
		nav.teal.lighten-2
			ul#nav-mobile.right.hide-on-med-and-down
				li: a(href='/') Home
				li.active: a(href='#') Register Here
				
		div.container
			h3 Sign up form
				form.col.s12(action='/register', method='POST', autocomplete='off')
					input(minlength='3', required, type='text', name='username',placeholder='Enter your username')
					input(minlength='3', required, type='text', name='email', placeholder='Enter your email')
					input(required, minlength='8', type='password', name='password', placeholder='Choose a password')
					input(required, type='password', name='password2', placeholder='Confirm Password')
					button.btn(type="submit", name="submit") Create New Account
			br
			h2 #{message}
		script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.1/js/materialize.min.js")
